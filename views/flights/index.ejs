<%- include('../partials/header') %>

<h2>Complete Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Departure Date</th>
      <th>Departure Airport</th>
      <th>Airline Name</th>
      <th>Flight Number</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.departureDate %></td>
            <td><%= f.airport %></td>
            <td><%= f.airline %></td>
            <td><%= f.flightNo %></td>
            <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
        </tr>
    <% }) %>>
  </tbody>
</table>

<%- include('../partials/footer') %>